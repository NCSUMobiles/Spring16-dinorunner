<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dino.ncsu.dinorunner">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            android:configChanges="orientation|screenSize"
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.DinoPickerActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".Activity.TrackPicker"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_track_picker" />
        <activity
            android:name=".Activity.ItemPickActivity"
            android:configChanges="orientation|screenSize"
            android:label="Pick your items" />
        <activity
            android:name=".Pedometer.RunningActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_running"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"/>

        <service android:name=".Pedometer.StepService" android:stopWithTask="true"/>

        <activity
            android:name=".Activity.VictoryActivity"
            android:label="@string/title_activity_victory"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.Victory_Activity"
            android:label="@string/title_activity_victory_"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Activity.Loot_Activity"></activity>
    </application>

</manifest>
